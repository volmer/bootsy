<% namespace = "bootsy_#{Time.now.to_i}" %>
<%= form_for [bootsy, resource_or_nil(image.image_gallery), image], remote: true, html: {:class => 'bootsy form-inline'}, namespace: namespace, data: {namespace: namespace} do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% if image.errors.any? %>
    <% image.errors.full_messages.each do |msg| %>
      <div class="alert alert-error"><%= msg %></div>
    <% end %>
  <% end %>

  <div class="bootsy-spinner">
    <%= image_tag "bootsy/ajax-loader.gif" %>
  </div>
  
  <%= f.file_field :image_file, title: t('bootsy.action.upload') %>

  <%= f.submit t('bootsy.action.load'), id: 'upload_submit', :class => 'btn btn-primary' %>
<% end %>
