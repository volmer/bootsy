<div class="page-header">
  <h1>New post</h1>
</div>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :content %>
  <%= f.bootsy_area :content, rows: 16, class: 'form-control post-content' %>

  <h2>Comment</h2>

  <%= f.fields_for(:comments) do |sf| %>
    <%= sf.label :author %>
    <%= sf.text_field :author, class: 'form-control' %>

    <%= sf.label :content, 'Comment' %>
    <%= sf.bootsy_area :content, rows: 8, class: 'form-control comment-content' %>
  <% end %>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>

    <%= link_to 'Cancel', posts_path, class: 'btn' %>
  </div>
<% end %>
