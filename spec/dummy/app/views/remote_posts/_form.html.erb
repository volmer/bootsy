<%= form_for(Post.new, remote: true, html: { id: 'new-remote-post' }, data: { type: 'json' }) do |f| %>
  <div class="page-header">
    <h1>New remote post</h1>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.bootsy_area :content, class: 'form-control', id: 'remote-post-area' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
